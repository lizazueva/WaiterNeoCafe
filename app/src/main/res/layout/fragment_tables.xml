<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgr"
    tools:context="com.example.waiterneocafe.view.orders.TablesFragment">


    <ImageView
        android:id="@+id/image_busy"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icn_busy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_busy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/sf_pro"
        android:text="@string/text_busy"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/image_busy"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_free"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/icn_free"
        app:layout_constraintStart_toEndOf="@+id/text_busy"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_free"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/sf_pro"
        android:text="@string/text_free"
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/image_free"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/include_table"
        layout="@layout/table_guidline"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="24dp"
        android:layout_height="250dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/image_busy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />
</androidx.constraintlayout.widget.ConstraintLayout>